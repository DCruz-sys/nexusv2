{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NexusV2RunTaskGraph",
  "type": "object",
  "required": [
    "run_id",
    "created_at",
    "tasks"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 8
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "global_constraints": {
      "type": "object",
      "properties": {
        "max_parallel": {
          "type": "integer",
          "minimum": 1
        },
        "default_timeout_sec": {
          "type": "integer",
          "minimum": 5
        }
      },
      "additionalProperties": false
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "task_id",
          "type",
          "objective",
          "dependencies",
          "risk_level",
          "timeout_sec",
          "retry_policy",
          "hitl_required",
          "output_contract"
        ],
        "properties": {
          "task_id": {
            "type": "string",
            "minLength": 2
          },
          "type": {
            "type": "string",
            "enum": [
              "tool",
              "llm",
              "browser",
              "kb",
              "control"
            ]
          },
          "objective": {
            "type": "string",
            "minLength": 4
          },
          "agent_role": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "integer"
          },
          "risk_level": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "timeout_sec": {
            "type": "integer",
            "minimum": 5
          },
          "retry_policy": {
            "type": "object",
            "required": [
              "max_attempts",
              "backoff_sec"
            ],
            "properties": {
              "max_attempts": {
                "type": "integer",
                "minimum": 0,
                "maximum": 5
              },
              "backoff_sec": {
                "type": "integer",
                "minimum": 0,
                "maximum": 600
              }
            },
            "additionalProperties": false
          },
          "hitl_required": {
            "type": "boolean"
          },
          "tool": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "params": {
                "type": "object"
              }
            },
            "additionalProperties": false
          },
          "control": {
            "type": "object",
            "properties": {
              "action": {
                "type": "string"
              },
              "params": {
                "type": "object"
              }
            },
            "additionalProperties": false
          },
          "output_contract": {
            "type": "object",
            "required": [
              "format",
              "fields"
            ],
            "properties": {
              "format": {
                "type": "string",
                "enum": [
                  "json",
                  "text"
                ]
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
